<!DOCTYPE html>
<html lang="en">
    <head>
        {{/* Here is our meta charset and title */}}
        {{template "meta-title"}}
        {{/* Here is our pixel density markup */}}
        {{template "pixel-dense"}}
        {{/* Here is our FavIcon */}}
        {{template "fav-icon1"}}
        {{/* Here are our fonts */}}
        {{template "signUpFonts"}}
        {{/* Here are our Media Query and stylesheets */}}
        <link rel="stylesheet" type="text/css" href="static/css/main.css">
        <link rel="stylesheet" type="text/css" href="static/css/styling.css">
        <link rel="stylesheet" type="text/css" media="(min-width: 600px)" href="static/css/mq_600.css">
        {{/* Here is our Javascript or additional code needed */}}
        <script src="static/js/pagehandling.js"></script>
        <script src="static/js/signup.js"></script>
        <script src="static/js/fieldVal.js"></script>
        {{/* AngularJS for added email address */}}
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    </head>
    <body class="bodySignUpPage">
        {{/* Here is our header */}}
        
        {{/* Login section */}}
        <div class="signInAllContentDiv">
            {{/* Here is the form setup */}}
            <div id="divformDivSignUp" class="divSignInHolder">
                {{/* Sign Up Title Instruction */}}
                <div class="instructUserDiv">
                    <p class="logininstructP">
                        Sign-Up
                    </p>
                </div>
                {{/* Begin signup form */}}
                <div class="signUpAlignmentDiv">
                    {{/* Used to display any errors upon messups */}}
                    <div class="errorSignUpDiv" id="errorSignUpDiv">
                        <p class="signUpErrP" id="signInErrorP"></p>
                    </div>
                    {{/* USERNAME */}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="text" id="username" name="username" placeholder="username" minlength=1 maxlength=20 required>
                    </div>
                    {{/* FIRSTNAME */}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="text" id="firstname" name="firstname" placeholder="firstname" minlength=1 maxlength=20 required>
                    </div>
                    {{/* LASTNAME */}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="text" id="lastname" name="lastname" placeholder="lastname" minlength=1 maxlength=20 required>
                    </div>
                    {{/* PASSWORD */}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="password" id="password" name="password" placeholder="Password" minlength=8 maxlength=20 autocomplete="off" required>
                    </div>
                    {{/* CHECK PASSWORD*/}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="password" id="passwordRetype" name="passwordRetype" placeholder="Re-type password" minlength=8 maxlength=20 autocomplete="off" required>
                    </div>
                    {{/* EMAIL */}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="email" id="email" name="myEmailInput" placeholder="Enter a valid email" maxlength=50>
                        <!-- Used to inform about status of email -->
                        <p id="emailOkay">
                            
                        </p>
                    </div>
                    {{/* PRIMARY PHONE NUMBER(S) */}}
                    {{/* DEBUG: Need to collect multiple phone numbers; use angular to create new tab(s)*/}}
                    <div class="signUpFieldSecDiv">
                        <input class="signUpInput" type="text" id="primaryPhoneNums" name="primaryPhoneNums" placeholder="Primary phone number" minlength=1 maxlength=20>
                    </div>
                    {{/* TELL US ABOUT YOU */}}
                    <div class="signUpFieldSecDiv">
                        <textarea class="textareaTellMe" id="textareaTellMe" name="textareaTellMe" 
                        placeholder="Let us know why you want to join LearnR!" maxlength=120></textarea>
                    </div>
                    {{/* SUBMIT BUTTON */}}
                    <div class="signUpFieldSecDiv">
                        <div class="fieldSection" id="signUpSubmitB">
                            <button id="submitSignUpButton" class="actionDivButton">Sign-Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/* Here is our footer */}}
    </body>
</html>